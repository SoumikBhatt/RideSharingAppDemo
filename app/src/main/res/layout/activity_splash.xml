<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        tools:context=".SplashActivity">

    <View android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#90000000"/>

    <ImageView
            android:id="@+id/iv_car"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_car"
            android:layout_centerInParent="true"
    />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_centerInParent="true"
                  android:id="@+id/layout_linear"
                  android:padding="5dp"
                  android:layout_below="@id/iv_car">

        <TextView
                android:id="@+id/tv_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:fontFamily="serif-monospace"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
        />

        <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharing"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/tv_ride"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_linear"
        android:layout_centerInParent="true"
        android:text="Powered by"
        android:textAllCaps="true"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:fontFamily="serif-monospace"
/>
    <TextView
            android:id="@+id/tv_bits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pow"
            android:layout_centerInParent="true"
            android:text="BitsnBytes Solution"
            android:textSize="32sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
    />

</RelativeLayout>